= render "items/pc_header"
.MyAccountPage
  .MyAccountPage__header

  .Main-AccountPage
    .Main-AccountPage__move
      .Main-AccountPage__move--title
        %p.newText クレジットカード情報入力
      .AccountPage__title 
        
        = form_with url: pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm" do |f|
          .form__upper
            .form__upper__group
              = f.label :カード番号
              %span.Mandatory  必須
              = f.text_field :number, type: 'text', class: 'input-default', placeholder: '半角数字のみ', maxlength: "16"
            .form__upper__group.exp
              .name
                = f.label :有効期限
                %span.Mandatory 必須
              .form__upper__group--day
                = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-default harf'
                %span 月
                = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-default harf'
                %span 年
            .form__upper__group
              = f.label :セキュリティコード
              %span.Mandatory 必須
              = f.text_field :cvc, name: "cvc", id:"cvc", type: 'text', class: 'input-default', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
            .form__upper__group
              %p.about
                %span
                = link_to 'カード裏面の番号とは？', root_path, class:'about__registered'
            .form__upper__group
              = f.submit '追加する', class: 'btn-default', id: 'charge-form'
= render "items/footer"

