.AccountPage
  .AccountPage__title
    %h2 会員登録

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname",class: 'field__box', placeholder: "ニックネーム（必須）"
      %br/
      .field
        = f.email_field :email, autofocus: true, autocomplete: "email",class: 'field__box', placeholder: "メールアドレス（必須）"
      %br/
      .field
        = f.password_field :password, autocomplete: "new-password",class: 'field__box', placeholder: "パスワード（必須）"
      .actions
        = f.submit "登録",class: 'actions__box'
    = render "devise/shared/links"
