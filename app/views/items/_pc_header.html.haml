.Header
  .Inner
    .Main__header
      .Icon
        = link_to '/', class:'' do
          = image_tag 'logo/logo.png', alt: '', class: 'Main__header__icon'
      .Search__box
        =form_with(url: search_items_path, local: true, method: :get, class: "Form__contents") do |form|
          =form.text_field :keyword,placeholder: "キーワードから探す", class: "Form__inputText"
          %button.Search__btn{type: "submit"}
            = image_tag 'icon/icon-search 1.png', class: 'Search__btn--icon'
    .Nav
      %ul.Lists__left
        %li
          = link_to 'カテゴリー'
        %li
          = link_to 'ブランド'
      %ul.Lists__right
        -if user_signed_in?
          %li
            = link_to 'マイページ', user_path(current_user.id)
        -else
          %li
            = link_to 'ログイン', new_user_session_path
          %li
            = link_to "新規会員登録", new_user_registration_path